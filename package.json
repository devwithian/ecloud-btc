{
  "name": "next-js-boilerplate",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "run-p dev:*",
    "dev2": "run-p db-server:file dev:*",
    "worker": "tsx -r dotenv/config src/worker/price.ts",
    "worker-guess": "tsx -r dotenv/config src/worker/guess.ts",
    "build:next": "next build",
    "build": "run-p build:* --race",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db-server:file": "pglite-server --db=local.db",
    "db-server:memory": "pglite-server",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "worker:pm2": "pm2 start ecosystem.config.cjs --only btc-price-worker",
    "worker:pm2:dev": "pm2 start ecosystem.config.cjs --only btc-price-worker --env development",
    "worker-guess:pm2": "pm2 start ecosystem.config.cjs --only resolve-guess-worker",
    "worker-guess:pm2:dev": "pm2 start ecosystem.config.cjs --only resolve-guess-worker --env development",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:nextjs": "pm2 start ecosystem.config.cjs --only nextjs-app",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.12",
    "@clerk/localizations": "^3.28.5",
    "@clerk/nextjs": "^6.35.5",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.2.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^10.27.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.555.0",
    "next": "^15.5.6",
    "next-intl": "^4.5.6",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "posthog-js": "^1.298.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.67.0",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@chromatic-com/playwright": "^0.12.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@electric-sql/pglite-socket": "^0.0.19",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@faker-js/faker": "^10.1.0",
    "@lingual/i18n-check": "^0.8.14",
    "@next/bundle-analyzer": "^15.5.6",
    "@next/eslint-plugin-next": "^15.5.6",
    "@playwright/test": "^1.57.0",
    "@spotlightjs/spotlight": "^4.5.1",
    "@storybook/addon-a11y": "^9.1.16",
    "@storybook/addon-docs": "^9.1.16",
    "@storybook/addon-vitest": "^9.1.16",
    "@storybook/nextjs-vite": "^9.1.16",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "checkly": "^6.9.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^9.1.16",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "knip": "^5.70.2",
    "lefthook": "^1.13.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^24.2.9",
    "storybook": "^9.1.10",
    "tailwindcss": "^4.1.14",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^1.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
